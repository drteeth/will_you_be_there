<h2>Listing attendance</h2>

<table class="table">
  <thead>
    <tr>
      <th>Game</th>
      <th>Member</th>
      <th>Status</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for attendance <- @attendance do %>
    <tr>
      <td><%= attendance.game %></td>
      <td><%= attendance.member %></td>
      <td><%= attendance.status %></td>

      <td class="text-right">
        <%= link "Show", to: attendance_path(@conn, :show, attendance), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: attendance_path(@conn, :edit, attendance), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: attendance_path(@conn, :delete, attendance), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New attendance", to: attendance_path(@conn, :new) %>
